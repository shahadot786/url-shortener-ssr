<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>

    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
      }

      body {
        min-height: 100vh;
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }

      .container {
        width: 100%;
        max-width: 900px;
        background: #fff;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      }

      h1,
      h2 {
        text-align: center;
        margin-bottom: 15px;
        color: #2a5298;
      }

      .result {
        background: #f1f5ff;
        border: 1px solid #cfd9ff;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 20px;
        text-align: center;
        word-break: break-all;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 25px;
      }

      label {
        font-weight: bold;
      }

      input {
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 16px;
      }

      button {
        padding: 12px;
        border-radius: 6px;
        border: none;
        background: #2a5298;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
      }

      button:hover {
        background: #1e3c72;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        font-size: 14px;
      }

      thead {
        background: #2a5298;
        color: #fff;
      }

      th,
      td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
        word-break: break-word;
      }

      tr:nth-child(even) {
        background: #f9f9f9;
      }

      a {
        color: #1e3c72;
        font-weight: bold;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .delete-btn {
        background: transparent;
        border: none;
        cursor: pointer;
        font-size: 18px;
        color: #d11a2a;
      }

      .delete-btn:hover {
        transform: scale(1.2);
      }

      @media (max-width: 600px) {
        table {
          font-size: 12px;
        }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <% if (locals.id) { %>
      <div class="result">
        <strong>Generated Short URL:</strong><br />
        <a href="<%= baseUrl %>/api/url/<%= id %>" target="_blank">
          <%= baseUrl %>/api/url/<%= id %>
        </a>
      </div>
      <% } %>

      <form method="POST" action="/api/url">
        <label for="url">Enter your original URL</label>
        <input
          type="text"
          name="url"
          id="url"
          placeholder="https://example.com"
          required
        />
        <button type="submit">Generate Short URL</button>
      </form>

      <% if (locals.urls && urls.length > 0) { %>
      <h2>All URLs</h2>

      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Short URL</th>
            <th>Original URL</th>
            <th>Clicks</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a
                href="<%= baseUrl %>/api/url/<%= url.shortId %>"
                target="_blank"
              >
                <%= baseUrl %>/api/url/<%= url.shortId %>
              </a>
            </td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.visitHistory.length %></td>
            <td>
              <button
                class="delete-btn"
                title="Delete"
                onclick="deleteUrl('<%= url._id %>')"
              >
                ðŸ—‘
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>

    <script>
      async function deleteUrl(id) {
        const confirmDelete = confirm(
          "Are you sure you want to delete this URL?"
        );
        if (!confirmDelete) return;

        try {
          const res = await fetch(`/api/url/${id}`, {
            method: "DELETE",
          });

          const data = await res.json();

          if (data.success) {
            location.reload();
          } else {
            alert(data.message || "Delete failed");
          }
        } catch (error) {
          alert("Something went wrong");
        }
      }
    </script>
  </body>
</html>
